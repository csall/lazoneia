{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)\\.(svg|jpg|png|gif|ico|webp)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    { "handle": "filesystem" }
  ],
  "images": {
    "sizes": [16, 32, 48, 64, 96, 128, 180, 256, 384, 512, 1024],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "**"
      }
    ]
  }
}
